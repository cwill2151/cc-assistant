{
    "version": "1.0.0",
    "repository": "cwill2151/cc-assistant",
    "branch": "master",
    "systems": {
        "assistant": {
            "name": "Assistant Computer",
            "description": "A computer that runs the AI assistant.",
            "files": [
                {"source": "assistant/main.lua", "destination": "assistant/main.lua"},
                {"source": "assistant/comm.lua", "destination": "assistant/comm.lua"},
                {"source": "assistant/config.lua", "destination": "assistant/config.lua"},
                {"source": "assistant/meSystem.lua", "destination": "assistant/meSystem.lua"},
                {"source": "assistant/providers/gemini.lua", "destination": "assistant/providers/gemini.lua"},
                {"source": "assistant/providers/openai.lua", "destination": "assistant/providers/openai.lua"},
                {"source": "assistant/providers/provider.lua", "destination": "assistant/providers/provider.lua"},
                {"source": "assistant/tools/meTools.lua", "destination": "assistant/tools/meTools.lua"}
            ],
            "startup": "assistant/main",
            "requirements": ["meBridge", "chatBox", "modem"]
        },
        "storage": {
            "name": "Storage access point for the assistant",
            "description": "A simple storage system for the assistant to use.",
            "files": [
                {"source": "storage/main.lua", "destination": "storage/main.lua"}
            ],
            "startup": "storage/main",
            "requirements": ["modem"]
        }
    },
    "files": [
        {"source": "initenv.lua", "destination": "initenv.lua"},
        {"source": "common/config.lua", "destination": "common/config.lua"},
        {"source": "config/config.json", "destination": "config/config.json"}
    ],
    "cleanup": {
        "directories": ["assistant", "storage", "common"],
        "files": ["startup.lua", "initenv.lua"],
        "patterns": ["*_log.txt"]
    }
}